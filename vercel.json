{
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- . ':!qa-results'",
  "functions": {
    "api/**/*.php": { "runtime": "vercel-php@0.7.3" }
  },
  "routes": [
    {
        "src": "/assets/(.*)",
        "dest": "assets/$1"
    },
    {
        "src": "/favicon\\.ico",
        "dest": "assets/favicon.ico"
    },
    { 
        "src": "/(.*)", 
        "dest": "/api/index.php" 
    }
  ]
}
